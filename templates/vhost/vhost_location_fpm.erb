  location <%= location %> {
<% if @location_cfg_prepend -%><% location_cfg_prepend.each do |i| -%>
    <%= i %>;
<% end -%><% end -%>
    set $script $uri;
    set $path_info "/";

    root <%= www_root %>;

    if ($uri ~ "^(.+\.php)($|/)") {
        set $script $1;
    }

    if ($uri ~ "^(.+\.php)(/.+)") {
        set $script $1;
        set $path_info $2;
    }

    include /etc/nginx/fastcgi_params;
    fastcgi_param SCRIPT_FILENAME $document_root$script;
    fastcgi_param SCRIPT_NAME $script;
    fastcgi_param PATH_INFO $path_info;
    <% if @geoip_enable %>
    fastcgi_param HTTP_GEO_COUNTRY_CODE $geoip_city_country_code;
    fastcgi_param HTTP_GEO_COUNTRY_NAME $geoip_city_country_name;
    fastcgi_param HTTP_GEO_REGION $geoip_region;
    fastcgi_param HTTP_GEO_CITY $geoip_city;
    <% end %>

    fastcgi_pass <%= fpm %>;

<% if @location_cfg_append -%><% location_cfg_append.each do |i| -%>
    <%= i %>;
<% end -%><% end -%>
  }
